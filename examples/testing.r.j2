# Define some variables
((# name = "John Doe" #))
((# age = 25 #))
((# country = "USA" #))

# Print the variables
cat("My name is", ((( name ))), "and I am", ((( age ))), "years old. I am from", ((( country ))), "\n")

# Loop over a list of numbers
((* with numbers = c(1, 2, 3, 4, 5) *))
cat("The numbers are:")
for (number in numbers) {
  cat(number, " ")
}
cat("\n")
((* endwith *))

# Conditional statement
((# temperature = 25 #))
cat("The temperature is", ((( temperature ))), "degrees Celsius.\n")
((* if temperature > 30 *))
cat("It's hot outside.\n")
((* elif temperature < 10 *))
cat("It's cold outside.\n")
((* else *))
cat("The weather is pleasant.\n")
((* endif *))

